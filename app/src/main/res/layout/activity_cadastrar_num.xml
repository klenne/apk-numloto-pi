<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CadastrarNum">
    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="56dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/linearLayout" android:background="#0632AB">
        <TextView
                android:text="Cadastrar Número"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/txv_titulo"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/btn_voltar_cadastro"
                android:layout_marginStart="150dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="190dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0.5"/>
        <ImageButton
                android:src="@drawable/ic_arrow_back_white_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_voltar_cadastro"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                android:background="@android:color/transparent"/>
    </android.support.constraint.ConstraintLayout>
    <Spinner
            android:layout_width="200dp"
            android:layout_height="44dp"
            android:id="@+id/spn_cadastro"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="150dp" app:layout_constraintBottom_toTopOf="@+id/btn_cadastrar"/>
    <Button
            android:text="cadastrar"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:id="@+id/btn_cadastrar" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintEnd_toEndOf="parent"
            android:background="@android:color/background_light" android:textColor="#03FF0F"
            android:layout_marginBottom="56dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edt_numeros"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint='Separe os números por "-"'
            android:layout_marginBottom="42dp" app:layout_constraintBottom_toTopOf="@+id/spn_cadastro"/>
    <TextView
            android:text="Digite o Número:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:textSize="24sp"
            android:layout_marginTop="80dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            android:layout_marginBottom="167dp" app:layout_constraintBottom_toTopOf="@+id/edt_numeros"/>
</android.support.constraint.ConstraintLayout>
