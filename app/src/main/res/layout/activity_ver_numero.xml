            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="37dp"
            android:background="#FFFFFF" android:textColor="@android:color/holo_red_dark"/>
    <ImageView
            android:layout_width="255dp"
            android:layout_height="214dp" app:srcCompat="@android:color/transparent"
            android:id="@+id/imgQr"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            android:layout_marginTop="130dp" android:layout_marginBottom="98dp"
            app:layout_constraintBottom_toTopOf="@+id/txv_numero_mostrar"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/txv_numero_mostrar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="130dp" app:layout_constraintBottom_toTopOf="@+id/btn_deletar"
            android:textAlignment="center" android:textAllCaps="false" android:textSize="14sp"/>

</android.support.constraint.ConstraintLayout>
