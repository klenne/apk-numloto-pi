    </android.support.constraint.ConstraintLayout>
    <Button
            android:text="Deletar NÃºmero"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_deletar" app:layout_constraintStart_toStartOf="parent"
