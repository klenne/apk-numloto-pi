<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:maxHeight="250dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical" android:id="@+id/layoutClick">

        <TextView
                android:id="@+id/titulo_servico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:textAlignment="center"
                tools:text="Combinação"/>
        <TextView
                android:text="TextView"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/preco_servico"/>
        <TextView
                android:text="TextView"

                android:layout_width="match_parent"
                android:textSize="25dp"
                android:layout_height="wrap_content" android:id="@+id/descricao_servico"/>

    </LinearLayout>

</android.support.v7.widget.CardView>